<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.uci.ics.charm.tabellion">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.fingerprint"
        android:required="true" />

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="edu.uci.ics.charm.tabellion.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:replace="android:label,android:theme">
        <activity android:name="edu.uci.ics.charm.tabellion.CommentActivity"></activity>
        <activity android:name="edu.uci.ics.charm.tabellion.CreateAndEditContract" />
        <activity
            android:name="edu.uci.ics.charm.tabellion.TakePhoto"
            android:exported="true" />
        <activity
            android:name="edu.uci.ics.charm.tabellion.SigningActivityExternal"
            android:exported="true" />
        <activity
            android:name="edu.uci.ics.charm.tabellion.TakeScreenshotExternally"
            android:exported="true"
            android:label=""
            android:theme="@style/AppTheme.Transparent" />
        <activity
            android:name="edu.uci.ics.charm.tabellion.LauncherActivity"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.uci.ics.charm.tabellion.SigningActivity"
            android:theme="@style/AppFullScreenTheme" />
        <activity
            android:name="edu.uci.ics.charm.tabellion.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login" />
        <activity
            android:name="edu.uci.ics.charm.tabellion.RegisterNewUser"
            android:label="@string/title_activity_register_new_user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="edu.uci.ics.charm.tabellion.ContractViewingActivity" />
        <activity
            android:name="edu.uci.ics.charm.tabellion.NewDocument"
            android:label="@string/title_activity_new_document"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="edu.uci.ics.charm.tabellion.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="edu.uci.ics.charm.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <service android:name="edu.uci.ics.charm.tabellion.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>