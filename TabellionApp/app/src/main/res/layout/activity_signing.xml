<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/signing_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/signing_temp_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test"
        android:layout_below="@+id/signing_imageView"/>

    <TextView
        android:id="@+id/signing_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signing_going_to_next_page"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:id="@+id/signing_linearLayout_overlap_review_note"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_above="@+id/signing_temp_textView"
        android:layout_margin="4dp"
        android:visibility="gone"
        android:background="@color/design_default_color_secondary"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_margin="3dp"
            android:layout_height="wrap_content"
            android:src="@drawable/check_mark"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/black"
            android:text="@string/user_is_in_review_session_during_signing"
            android:textSize="18sp"/>
    </LinearLayout>

